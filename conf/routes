# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~
#CORS Path
OPTIONS        /*path                             controllers.Application.options(path)
# Home page
GET            /                                  controllers.Application.index
GET            /test/:zone/:id                              controllers.Application.test(zone:String,id:String)

# Roles
POST           /api/role                          controllers.RoleController.create
GET            /api/role/get/:id                  controllers.RoleController.findById(id:String)
GET            /api/role/roles                    controllers.RoleController.findAll()

# Votes
GET            /api/vote/upvote/:id               controllers.VoteController.upvote(id:String)
GET            /api/vote/downvote/:id             controllers.VoteController.downvote(id:String)
GET            /api/vote/votes/:id                controllers.VoteController.votes(id:String)

# Questions
POST           /api/question                      controllers.QuestionController.create
GET            /api/question/get/:id              controllers.QuestionController.findById(id:String)
GET            /api/question/questions            controllers.QuestionController.findAll()
GET            /api/question/stats/:id            controllers.QuestionController.getStats(id:String)

# Comments
POST           /api/comment                       controllers.CommentController.create
GET            /api/comments/get/:answerid        controllers.CommentController.findCommentsByAnswerId(answerid:String)

# Answers
POST           /api/answer                        controllers.AnswerController.create
GET            /api/answer/get/:id                controllers.AnswerController.findAnswersByQuestionId(id:String)



# Map static resources from the /public folder to the /assets URL path
GET            /assets/*file                      controllers.Assets.at(path="/public", file)
